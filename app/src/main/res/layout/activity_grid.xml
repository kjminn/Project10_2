            android:layout_width="120dp"
            android:layout_height="200dp"
            android:src="@drawable/i04"
            android:layout_margin="5dp"
            android:scaleType="fitXY"
            />
        <ImageView
            android:id="@+id/img05"
            android:layout_width="120dp"
            android:layout_height="200dp"
            android:src="@drawable/i05"
            android:layout_margin="5dp"
